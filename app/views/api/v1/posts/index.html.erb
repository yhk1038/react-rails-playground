<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', [:api, :v1, post] %></td>
        <td><%= link_to 'Edit', edit_api_v1_post_path(post) %></td>
        <td><%= link_to 'Destroy', [:api, :v1, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_api_v1_post_path %>
